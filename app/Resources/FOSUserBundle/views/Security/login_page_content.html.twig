{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div class="error-message">
        <span>{{ error.messageKey|trans(error.messageData, 'security') }}</span>
    </div>
{% endif %}
<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
    {% endif %}

    <div class="user-name input-field">
        <label for="username-page">{{ 'security.login.username'|trans }}</label>
        <input type="text" id="username-page" name="_username" value="{{ last_username }}" required="required" autocomplete="off"/>
    </div>
    <div class="user-password">
        <label  for="password-page">{{ 'security.login.password'|trans }}</label>
        <input  type="password" id="password-page" name="_password" required="required" autocomplete="off"/>
    </div>
    <div class="user-remember">
        <input type="checkbox" id="remember_me-page" name="_remember_me" value="on"/>
        <label for="remember_me-page">{{ 'security.login.remember_me'|trans }}</label>
    </div>
    <div class="user-action input-field">
        <input class="waves-effect waves-light btn" type="submit" id="_submit" name="_submit" value="Login"/>

        <a class="button-default" href="{{ path('fos_user_registration_register') }}">
            Register
        </a>
    </div>
</form>
